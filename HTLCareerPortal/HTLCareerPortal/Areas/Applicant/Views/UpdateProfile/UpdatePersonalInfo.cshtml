@model HTLCareerPortal.tbl_PersonalInfo
@using HTLCareerPortal.Models
@{
    ViewBag.Title = "UpdatePersonalInfo";
}
<div class="container">
    <h2>UPDATE YOUR PERSONAL DETAIL</h2>

    @using (Html.BeginForm())
